invert arg1 = case arg1 of
                x1 op1 x2 op2 x3 -> case y of
                               y1 (|,n2) y2 -> 
                               y1 -> y1
                x (-,n) y -> x (|,n) y

fun arg = lcase arg of
            arg11 op1 arg12 -> ecase arg2 of
                                 arg21 op2 op22 ->
                                 _ -> arg2
            . -> .
                                 
